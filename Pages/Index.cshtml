@page
@model IndexModel
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.5/signalr.min.js"></script>
    <script src="js/game.js"></script>
}

<center>
    <h2>Tic-Tac-Toe</h2>
    <div id="gameStatus">Choose your game mode:</div>

    <button id="singlePlayerBtn">Single Player (vs AI)</button>
    <button id="multiPlayerBtn">Multiplayer</button>
</center>

<!-- Centered Game Board -->
<div class="game-container">
    <div id="gameBoard">
        @for (int i = 0; i < 9; i++)
        {
            <button class="cell" id="cell-@i" onclick="makeMove(@i)"></button>
        }
    </div>
</div>

<center>
    <div>
        <h3>Scoreboard</h3>
        <p>Player X: <span id="scoreX">0</span></p>
        <p>Player O: <span id="scoreO">0</span></p>
    </div>

    <button id="restartBtn">Restart Game</button>
</center>

<!-- CSS to Center the Game Board -->
<style>
    .game-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 300px; /* Adjust as needed */
    }

    #gameBoard {
        display: grid;
        grid-template-columns: repeat(3, 80px);
        grid-gap: 5px;
    }

    .cell {
        width: 80px;
        height: 80px;
        font-size: 24px;
        text-align: center;
        border: 2px solid black;
    }
</style>
